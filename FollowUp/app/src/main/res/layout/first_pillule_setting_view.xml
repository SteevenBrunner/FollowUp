<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/first_pillule_setting_view">


    <Button
        android:background="@drawable/smallroundedbutton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:id="@+id/button3"
        android:layout_row="0"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PILLULE"
        android:textSize="32dp"
        android:textColor="#1a53ff"
        android:id="@+id/textView5"
        android:layout_row="1"
        android:layout_column="0" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:background="@drawable/background_rectangle"
        android:paddingTop="30dp"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="MARQUE"
            android:id="@+id/textView6"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_row="4"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NOMBRE DE COMPRIMES"
            android:id="@+id/textView7"
            android:layout_row="5"
            android:layout_column="0" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2"
            android:layout_row="6"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="HEURE DU RAPPEL"
            android:id="@+id/textView8"
            android:layout_row="7"
            android:layout_column="0" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText3"
            android:layout_row="8"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NOM/PRENOM"
            android:id="@+id/textView9"
            android:layout_row="9"
            android:layout_column="0" />

        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_row="10"
            android:layout_column="0" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRMER"
        android:id="@+id/button4"
        android:layout_row="3"
        android:layout_column="0"
        android:background="@drawable/roundedcornerbutton"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"/>


</LinearLayout>