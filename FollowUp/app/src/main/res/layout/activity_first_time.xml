<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/first_time"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/textViewFirst"
        android:text="CHOISISSEZ VOTRE CONTRACEPTION"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <ImageButton
        android:id="@+id/buttonPilule"
        android:background="@drawable/pillule"
        android:layout_width="75dp"
        android:layout_marginTop="90dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/textView2"
        android:text="PILULE"
        android:layout_marginTop="175dp"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <ImageButton
        android:id="@+id/buttonPatch"
        android:background="@drawable/patch"
        android:layout_width="75dp"
        android:layout_marginTop="230dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/textView3"
        android:text="PATCH"
        android:textSize="25sp"
        android:layout_marginTop="315dp"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

    <ImageButton
        android:id="@+id/buttonAnneau"
        android:background="@drawable/anneaux"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="370dp"
        android:layout_gravity="center_horizontal|top" />

    <TextView
        android:id="@+id/textView4"
        android:text="ANNEAU"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:layout_marginTop="455dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" />

</FrameLayout>